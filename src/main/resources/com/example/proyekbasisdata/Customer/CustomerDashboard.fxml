<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.proyekbasisdata.Customer.CustomerDashboardController">
    <children>
        <!-- Sidebar -->
        <VBox prefWidth="300.0" style="-fx-background-color: #e5b17a;" spacing="20" alignment="TOP_CENTER">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <ImageView fitHeight="100.0" fitWidth="100.0">
                <image>
                    <Image url="@../assets/logo.png" />
                </image>
            </ImageView>
            <Button text="Dashboard" fx:id="dashboardButton" prefWidth="150" style="-fx-background-color: #d7944c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px;" />
            <Button text="Order" fx:id="orderButton" prefWidth="150" style="-fx-background-color: transparent; -fx-border-color: #8A4B1F; -fx-border-width: 2; -fx-text-fill: #8A4B1F; -fx-font-weight: bold;" />
            <Button text="History" fx:id="historyButton" prefWidth="150" style="-fx-background-color: transparent; -fx-border-color: #8A4B1F; -fx-border-width: 2; -fx-text-fill: #8A4B1F; -fx-font-weight: bold;" />
            <Button text="Logout" fx:id="logoutButton" prefWidth="150" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>

        <!-- Content Area -->
        <AnchorPane prefWidth="980.0" style="-fx-background-color: #ffecd6;">
            <children>
                <Label text="Selamat Datang di Dashboard!" layoutX="50.0" layoutY="40.0">
                    <font>
                        <Font name="Poppins SemiBold" size="36.0" />
                    </font>
                </Label>

                <HBox spacing="20.0" layoutX="50.0" layoutY="120.0">
                    <children>
                        <VBox spacing="10.0" alignment="CENTER" style="-fx-background-color: #f4d7a7; -fx-background-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="250.0" prefHeight="200.0">
                            <ImageView fitHeight="64.0" fitWidth="64.0">
                                <image>
                                    <Image url="@../assets/order-icon.png" />
                                </image>
                            </ImageView>
                            <Label text="Total Order Anda" />
                            <Label fx:id="totalOrdersLabel" text="0" style="-fx-font-size: 36px; -fx-font-weight: bold;" />
                        </VBox>

                        <VBox spacing="10.0" alignment="CENTER" style="-fx-background-color: #f4d7a7; -fx-background-radius: 15px; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="250.0" prefHeight="200.0">
                            <ImageView fitHeight="64.0" fitWidth="64.0">
                                <image>
                                    <Image url="@../assets/branch-icon.png" />
                                </image>
                            </ImageView>
                            <Label text="Cabang Favorit" />
                            <Label fx:id="favoriteBranchLabel" text="-" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                        </VBox>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</HBox>
