<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.proyekbasisdata.Customer.CustomerOrderController">
    <children>
        <!-- Sidebar -->
        <VBox prefWidth="300.0" style="-fx-background-color: #e5b17a;" spacing="20" alignment="TOP_CENTER">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <ImageView fitHeight="100.0" fitWidth="100.0">
                <image>
                    <Image url="@../assets/logo.png" />
                </image>
            </ImageView>
            <Button text="Dashboard" fx:id="dashboardButton" prefWidth="150"
                    style="-fx-background-color: transparent; -fx-border-color: #8A4B1F; -fx-border-width: 2; -fx-text-fill: #8A4B1F; -fx-font-weight: bold;" />
            <Button text="Order" fx:id="orderButton" prefWidth="150"
                    style="-fx-background-color: #d7944c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px;" />
            <Button text="History" fx:id="historyButton" prefWidth="150"
                    style="-fx-background-color: transparent; -fx-border-color: #8A4B1F; -fx-border-width: 2; -fx-text-fill: #8A4B1F; -fx-font-weight: bold;" />
            <Button text="Logout" fx:id="logoutButton" prefWidth="150"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>

        <!-- Content Area -->
        <AnchorPane prefWidth="980.0" style="-fx-background-color: #ffecd6;">
            <children>
                <Label text="Pemesanan Menu" layoutX="50.0" layoutY="40.0">
                    <font>
                        <Font name="Poppins SemiBold" size="36.0" />
                    </font>
                </Label>

                <HBox layoutX="50.0" layoutY="100.0" spacing="20.0">
                    <Label text="Pilih Cabang:" />
                    <ComboBox fx:id="branchComboBox" prefWidth="200.0" onAction="#onBranchSelected" />
                </HBox>

                <TableView fx:id="menuTableView" layoutX="50.0" layoutY="150.0" prefHeight="400.0" prefWidth="880.0">
                    <columns>
                        <TableColumn fx:id="colName" text="Nama Menu" prefWidth="200.0" />
                        <TableColumn fx:id="colDescription" text="Deskripsi" prefWidth="300.0" />
                        <TableColumn fx:id="colPrice" text="Harga" prefWidth="100.0" />
                        <TableColumn fx:id="colAction" text="Aksi" prefWidth="100.0" />
                    </columns>
                </TableView>

                <Button fx:id="checkoutButton" layoutX="800.0" layoutY="580.0" text="Checkout"
                        onAction="#onCheckout"
                        style="-fx-background-color: #8A4B1F; -fx-text-fill: white; -fx-font-weight: bold;" />
            </children>
        </AnchorPane>
    </children>
</HBox>
